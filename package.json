{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "engines": {
    "node": ">=16.17.0",
    "yarn": ">=1.22.10"
  },
  "packageManager": "yarn@3.2.3",
  "scripts": {
    "dev": "vite & php artisan serve",
    "clean": "rimraf ./node_modules/.vite",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . -w -u",
    "lint:php": "composer pint",
    "lint:style": "stylelint \"./**/*.{css,sass,scss,htm,html,vue}\" --fix --cache-location ./node_modules/.vite/vite-plugin-stylelint  && prettier  \"./**/*.{css,sass,scss,htm,html,vue}\" -w -u",
    "lint:markup": "vue-tsc --noEmit",
    "build": "vite build",
    "build:analyze": "vite build --mode analyze",
    "prepare": "husky install"
  },
  "dependencies": {
    "@inertiajs/inertia": "^0.11.0",
    "@inertiajs/inertia-vue": "^0.8.0",
    "@inertiajs/progress": "^0.2.7",
    "@tailwindcss/forms": "^0.5.3",
    "axios": "^0.27",
    "normalize.css": "^8.0.1",
    "tailwindcss": "^3.1.8",
    "vue": "^2.7.10",
    "vue-inertia-composable": "^0.1.2",
    "vue2-teleport": "^1.0.1",
    "ziggy-js": "^1.4.6"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.184",
    "@types/node": "^18.7.14",
    "@types/ziggy-js": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "@vitejs/plugin-vue2": "^1.1.2",
    "@vue/eslint-config-prettier": "^7.0.0",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.8",
    "eslint": "^8.23.0",
    "eslint-config-google": "^0.14.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsdoc": "^39.3.6",
    "eslint-plugin-jsonc": "^2.4.0",
    "eslint-plugin-tsdoc": "^0.2.16",
    "eslint-plugin-vue": "^9.4.0",
    "eslint-plugin-vuejs-accessibility": "^1.2.0",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^8.0.1",
    "laravel-vite-plugin": "^0.6.0",
    "lint-staged": "^13.0.3",
    "postcss": "^8.4.16",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-visualizer": "^5.8.0",
    "stylelint": "^14.11.0",
    "stylelint-config-recommended-scss": "^7.0.0",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^4.8.2",
    "vite": "^3.0.9",
    "vite-plugin-checker": "^0.5.0",
    "vue-eslint-parser": "^9.0.3",
    "vue-template-compiler": "^2.7.10",
    "vue-tsc": "^0.40.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,jsonc,json5,yaml,yml,toml,yml,yaml,vue,htm,html,md}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*.{css,sass,scss,vue,htm,html}": "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "*.php": "composer pint",
    "*": "prettier -w -u"
  },
  "resolutions": {
    "prettier": "^2.7.1"
  }
}
