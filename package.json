{
  "$schema": "https://json.schemastore.org/package.json",
  "private": true,
  "engines": {
    "node": ">=18.15.0",
    "yarn": ">=1.22.19"
  },
  "packageManager": "yarn@3.5.0",
  "scripts": {
    "dev": "run-p dev:vite dev:serve",
    "dev:vite": "vite",
    "dev:serve": "php artisan serve",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false",
    "clean": "rimraf ./node_modules/.vite",
    "lint": "eslint . --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint && prettier . -w -u",
    "lint:php": "composer pint",
    "lint:style": "stylelint \"./**/*.{css,sass,scss,htm,html,vue}\" --fix --cache-location ./node_modules/.vite/vite-plugin-stylelint  && prettier  \"./**/*.{css,sass,scss,htm,html,vue}\" -w -u",
    "build": "run-p type-check build-only",
    "build:analyze": "vite build --mode analyze",
    "build:clean": "rimraf public/build bootstrap/ssr",
    "build-only": "vite build && vite build --ssr",
    "preview": "vite preview",
    "prepare": "husky install"
  },
  "dependencies": {
    "@inertiajs/inertia": "^0.11.1",
    "@inertiajs/vue2": "^1.0.2",
    "@logue/vue2-helpers": "^2.1.4",
    "@tailwindcss/forms": "^0.5.3",
    "axios": "^1.3",
    "normalize.css": "^8.0.1",
    "tailwindcss": "^3.2.7",
    "vue": "^2.7.14",
    "vue-inertia-composable": "^0.4.3",
    "ziggy-js": "^1.5.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.15.3",
    "@types/ziggy-js": "^1.3.2",
    "@typescript-eslint/eslint-plugin": "latest",
    "@vitejs/plugin-vue2": "^2.2.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/tsconfig": "^0.1.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.36.0",
    "eslint-config-standard-with-typescript": "latest",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "latest",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "eslint-plugin-vue": "latest",
    "eslint-plugin-vuejs-accessibility": "^2.1.0",
    "eslint-plugin-yaml": "^0.5.0",
    "husky": "^8.0.3",
    "laravel-vite-plugin": "^0.7.4",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.21",
    "postcss-html": "^1.5.0",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "rollup-plugin-visualizer": "^5.9.0",
    "stylelint": "^15.3.0",
    "stylelint-config-recommended-scss": "^9.0.1",
    "stylelint-config-recommended-vue": "^1.4.0",
    "stylelint-order": "^6.0.3",
    "typescript": "^4.9.5",
    "vite": "^4.2.0",
    "vite-plugin-checker": "^0.5.6",
    "vue-eslint-parser": "^9.1.0",
    "vue-server-renderer": "^2.7.14",
    "vue-tsc": "^1.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,json,jsonc,json5,yaml,yml,toml,vue,htm,html,md}": "eslint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-eslint",
    "*.{css,sass,scss,vue,htm,html}": "stylelint --fix --cache --cache-location ./node_modules/.vite/vite-plugin-stylelint",
    "*.php": "composer pint",
    "*": "prettier -w -u"
  },
  "resolutions": {
    "json5": "^2.2.3",
    "http-cache-semantics": "^4.1.1"
  }
}
