<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="PHP_CodeSniffer" xsi:noNamespaceSchemaLocation="vendor/squizlabs/PHP_CodeSniffer/phpcs.xsd">
  <arg name="basepath" value="."/>
  <arg name="extensions" value="php" />
  <arg value="ps" />

  <file>app</file>
  <file>config</file>
  <file>resources</file>
  <file>routes</file>
  <file>tests</file>

  <exclude-pattern>node_modules</exclude-pattern>

  <rule ref="./vendor/fossbarrow/laravel-phpcs/phpcs.xml"/>
  <rule ref="PSR12" />
</ruleset>
