{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts",
    "components.d.ts",
    "resources/**/*",
    "resources/**/*.vue"
  ],
  "exclude": ["resources/**/__tests__/*"],
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "noImplicitAny": false,
    "paths": { "@/*": ["./resources/js/*"] }
  },
  "vueCompilerOptions": { "target": 2.7 }
}
